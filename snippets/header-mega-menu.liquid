<style>
    nav.header__inline-menu {
        margin: 20px;
    }

    .list-menu {
        display: flex;
        flex-wrap: wrap;
        gap: 20px; /* Adjust the gap between columns */
        justify-content: space-between;
    }

    .list-menu__column {
        flex: 0 1 calc(25% - 20px); /* Adjust the width of each column */
    }

    .list-menu:nth-child(4) {
        /* Styles for the 4th list-menu (sizes) */
        background-color: #f0f0f0;
        padding: 20px;
    }

    .mega-menu {
        margin: 20px;
    }

    .mega-menu__content {
        display: flex;
        justify-content: center;
    }

    .mega-menu__list {
        list-style-type: none;
        padding: 0;
        display: flex;
        flex-wrap: wrap;
        flex-direction: column;
    }

    .mega-menu__list li {
        box-sizing: border-box;
        margin-bottom: 10px;
        background-color: #f0f0f0;
        padding: 10px;
        width: 100%; /* Make each li take full width */
        text-align: center;
    }
</style>



<nav class="header__inline-menu">
        <ul class="list-menu list-menu--inline" role="list">
            {%- assign column_counter = 1 -%}
            {%- for link in section.settings.menu.links -%}
                {%- if column_counter == 1 -%}
                    <div class="list-menu__column">
                        {%- if forloop.index == 4 -%}
                            <div class="list-menu list-menu--sizes">
                        {%- else -%}
                            <div class="list-menu">
                        {%- endif -%}
                {%- endif -%}
                <li>
                    <!-- Your existing li content here -->
                </li>
                {%- assign column_counter = column_counter | plus: 1 -%}
                {%- if column_counter == 5 or forloop.last -%}
                    </div>
                    {%- assign column_counter = 1 -%}
                {%- endif -%}
            {%- endfor -%}
        </ul>
    </nav>
