<style>
    nav.header__inline-menu {
        margin: 20px;
    }

    .list-menu {
        display: flex;
        flex-wrap: wrap;
        gap: 20px; /* Adjust the gap between columns */
        justify-content: space-between;
    }

    .list-menu__column {
        flex: 0 1 calc(25% - 20px); /* Adjust the width of each column */
    }

    .list-menu:nth-child(4) {
        /* Styles for the 4th list-menu (sizes) */
        background-color: #f0f0f0;
        padding: 20px;
    }

    .mega-menu {
        margin: 20px;
    }
  .megamenusection{
    width: 100%;
}

    .mega-menu__content {
    display: flex;
    flex-direction: column;
}

 .mega-menu__content2 {
    display: flex;
    justify-content: center;
    gap: 10%;
    width: 65%;
    margin-left: 17.5%;
}

    .mega-menu__list {
        list-style-type: none;
        padding: 0;
        display: flex;
        flex-direction: column;
    }

    .mega-menu__list li {
        box-sizing: border-box;
        padding: 10px;
        width: 100%; /* Make each li take full width */
        text-align: center;
    }
  
  .notcolumn{
        display: flex;
        flex-direction: row;
  
    }

  .Vyfiltruj{
    display: flex;
    justify-content: center;
    margin-bottom: 20px;
}
  
</style>



<nav class="header__inline-menu">
  <ul class="list-menu list-menu--inline" role="list">
    {%- assign hasNovinky = false -%}
    {%- for link in section.settings.menu.links -%}
      {%- if link.handle == 'novinky' -%}
        {%- assign hasNovinky = true -%}
        <li>
          <a
            id="HeaderMenu-{{ link.handle }}"
            href="{{ link.url }}"
            class="header__menu-item list-menu__item link link--text focus-inset"
            {% if link.current %}
              aria-current="page"
            {% endif %}
          >
            <span
              {%- if link.current %}
                class="header__active-menu-item"
              {% endif %}
            >
              {{- link.title | escape -}}
            </span>
          </a>
        </li>
      {%- endif -%}
    {%- endfor -%}

    {%- if hasNovinky -%}
      {%- for link in section.settings.menu.links -%}
        {%- unless link.handle == 'novinky' -%}
          <li>
            {%- if link.links != blank -%}
              <header-menu>
                <details id="Details-HeaderMenu-{{ forloop.index }}" class="mega-menu">
                  <summary
                    id="HeaderMenu-{{ link.handle }}"
                    class="header__menu-item list-menu__item link focus-inset"
                  >
                    <span
                      {%- if link.child_active %}
                        class="header__active-menu-item"
                      {% endif %}
                    >
                      {{- link.title | escape -}}
                    </span>
                    {% render 'icon-caret' %}
                  </summary>

                  <!-- Existing MegaMenu content code here -->

                </details>
              </header-menu>
            {%- else -%}
              <a
                id="HeaderMenu-{{ link.handle }}"
                href="{{ link.url }}"
                class="header__menu-item list-menu__item link link--text focus-inset"
                {% if link.current %}
                  aria-current="page"
                {% endif %}
              >
                <span
                  {%- if link.current %}
                    class="header__active-menu-item"
                  {% endif %}
                >
                  {{- link.title | escape -}}
                </span>
              </a>
            {%- endif -%}
          </li>
        {%- endunless -%}
      {%- endfor -%}
    {%- else -%}
      {%- for link in section.settings.menu.links -%}
        <li>
          {%- if link.links != blank -%}
            <header-menu>
              <details id="Details-HeaderMenu-{{ forloop.index }}" class="mega-menu">
                <summary
                  id="HeaderMenu-{{ link.handle }}"
                  class="header__menu-item list-menu__item link focus-inset"
                >
                  <span
                    {%- if link.child_active %}
                      class="header__active-menu-item"
                    {% endif %}
                  >
                    {{- link.title | escape -}}
                  </span>
                  {% render 'icon-caret' %}
                </summary>

                <!-- Existing MegaMenu content code here -->

              </details>
            </header-menu>
          {%- else -%}
            <a
              id="HeaderMenu-{{ link.handle }}"
              href="{{ link.url }}"
              class="header__menu-item list-menu__item link link--text focus-inset"
              {% if link.current %}
                aria-current="page"
              {% endif %}
            >
              <span
                {%- if link.current %}
                  class="header__active-menu-item"
                {% endif %}
              >
                {{- link.title | escape -}}
              </span>
            </a>
          {%- endif -%}
        </li>
      {%- endfor -%}
    {%- endif -%}
  </ul>
</nav>








